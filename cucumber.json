{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/tests/features",
            "src/tests/step_definitions"
        ],
        "dryRun": false,
        "headless": false,
        "require": [
            "src/tests/step_definitions/*.ts",
            "src/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "html:src/tests/test-results/cucumber-report.html",
            "json:src/tests/test-results/cucumber-report.json",
            "progress"
        ],
        "parallel": 1
    }
}